# Optimized Dockerfile for faster builds
# Use this for production builds with Azure/AWS
# Original Dockerfile kept for reference/development

FROM python:3.12-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PYTHONPATH="/app:/app/multi_doc_chat"

# Set workdir
WORKDIR /app

# Install only essential OS dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    poppler-utils \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency manifests for better layer caching
COPY requirements.txt ./

# Install Python dependencies using pip (faster than uv for Docker builds)
# pip downloads pre-built wheels, which is much faster than compiling from source
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy only application code (thanks to .dockerignore)
COPY . .

# Expose port
EXPOSE 8080

# Run FastAPI with uvicorn
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080", "--reload"]

# For production, use this instead (more workers, no reload):
# CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080", "--workers", "4"]
